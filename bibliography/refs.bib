@article{artime_robustness_2024,
	title = {Robustness and resilience of complex networks},
	volume = {6},
	copyright = {2024 Springer Nature Limited},
	issn = {2522-5820},
	url = {https://www.nature.com/articles/s42254-023-00676-y},
