
@article{ledoux_little_2020,
	title = {A little history goes a long way toward understanding why we study consciousness the way we do today},
	volume = {117},
	copyright = {Copyright © 2020 the Author(s). Published by PNAS.. https://creativecommons.org/licenses/by/4.0/This open access article is distributed under Creative Commons Attribution License 4.0 (CC BY).},
	issn = {0027-8424, 1091-6490},
	url = {https://www.pnas.org/content/117/13/6976},
	doi = {10.1073/pnas.1921623117},
	abstract = {Consciousness is currently a thriving area of research in psychology and neuroscience. While this is often attributed to events that took place in the early 1990s, consciousness studies today are a continuation of research that started in the late 19th century and that continued throughout the 20th century. From the beginning, the effort built on studies of animals to reveal basic principles of brain organization and function, and of human patients to gain clues about consciousness itself. Particularly important and our focus here is research in the 1950s, 1960s, and 1970s involving three groups of patients—amnesia, split brain, and blindsight. Across all three groups, a similar pattern of results was found—the patients could respond appropriately to stimuli that they denied seeing (or in the case of amnesiacs, having seen before). These studies paved the way for the current wave of research on consciousness. The field is, in fact, still grappling with the implications of the findings showing that the ability to consciously know and report the identity of a visual stimulus can be dissociated in the brain from the mechanisms that underlie the ability to behave in a meaningful way to the same stimulus.},
	language = {en},
	number = {13},
	urldate = {2021-04-14},
	journal = {Proceedings of the National Academy of Sciences},
	author = {LeDoux, Joseph E. and Michel, Matthias and Lau, Hakwan},
	month = mar,
	year = {2020},
	pmid = {32170012},
	note = {Publisher: National Academy of Sciences
	Section: Perspective},
	keywords = {amnesia, blindsight, consciousness, split brain, unconscious},
	pages = {6976--6984},
	file = {Full Text PDF:/Users/shikharabhat/Desktop/databases/zotero/storage/YR7R424J/LeDoux et al. - 2020 - A little history goes a long way toward understand.pdf:application/pdf},
}

