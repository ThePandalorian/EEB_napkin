	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2435.13394},
	keywords = {life history, ageing, trade-off, carcinogenesis, immunosenescence, oncobiota, tumour},
